<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin_with_card_view"
        android:paddingRight="@dimen/activity_horizontal_margin_with_card_view"
        android:paddingTop="@dimen/activity_horizontal_margin_with_card_view"
        android:paddingBottom="@dimen/activity_horizontal_margin_with_card_view">
        <android.support.v7.widget.CardView
            android:id="@+id/event_card_view"
            style="@style/card_view">
            <LinearLayout
                style="@style/card_view_layout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/event_icon"
                        style="@style/card_view_icon"
                        android:src="@drawable/ic_music_note_black_24dp" />
                    <TextView
                        android:id="@+id/event_title"
                        style="@style/card_view_title"
                        android:paddingLeft="16dp"
                        android:paddingBottom="16dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/event_image"
                    style="@style/card_view_image"
                    android:src="@drawable/lucky_luke"
                    android:adjustViewBounds="true" />
                <TextView
                    android:id="@+id/event_text"
                    style="@style/card_view_text_title" />
                <TextView
                    android:id="@+id/event_subtext"
                    style="@style/card_view_text"
                    android:text="@string/lorem_ipsum"
                    android:paddingLeft="16dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/food_card_view"
            style="@style/card_view"
            android:layout_below="@+id/event_card_view">
            <RelativeLayout
                style="@style/card_view_layout" >
                <ImageView
                    android:id="@+id/food_icon"
                    style="@style/card_view_icon"
                    android:src="@drawable/ic_local_pizza_black_24dp" />
                <TextView
                    android:id="@+id/food_title"
                    style="@style/card_view_title"
                    android:text="@string/food" />
                <TextView
                    android:id="@+id/food_text"
                    style="@style/card_view_text"
                    android:layout_below="@id/food_title"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/opening_time_card_view"
            style="@style/card_view"
            android:layout_below="@+id/food_card_view">
            <RelativeLayout
                style="@style/card_view_layout" >
                <ImageView
                    android:id="@+id/opening_time_icon"
                    style="@style/card_view_icon"
                    android:src="@drawable/ic_access_time_black_24dp" />
                <TextView
                    android:id="@+id/opening_time_title"
                    style="@style/card_view_title"
                    android:text="@string/opening_time" />
                <TextView
                    android:id="@+id/opening_time_text"
                    style="@style/card_view_text"
                    android:layout_below="@id/opening_time_title"
                    android:text="@string/standard_opening_time" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>