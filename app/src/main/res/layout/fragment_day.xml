<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin_with_card_view"
        android:paddingRight="@dimen/activity_horizontal_margin_with_card_view"
        android:paddingTop="@dimen/activity_horizontal_margin_with_card_view"
        android:paddingBottom="@dimen/activity_horizontal_margin_with_card_view">
        <android.support.v7.widget.CardView
            android:id="@+id/event_card_view"
            style="@style/card_view">
            <RelativeLayout
                style="@style/card_view_layout" >
                <LinearLayout
                    android:id="@+id/event_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:id="@+id/event_icon"
                        style="@style/card_view_icon"
                        android:src="@drawable/ic_music_note_black_24dp" />
                    <TextView
                        android:id="@+id/event_title"
                        style="@style/card_view_title"
                        android:paddingLeft="16dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/event_image"
                    style="@style/card_view_image"
                    android:adjustViewBounds="true"
                    android:layout_below="@id/event_title_layout" />
                <TextView
                    android:id="@+id/event_text"
                    style="@style/card_view_text_title"
                    android:layout_below="@id/event_image"/>
                <TextView
                    android:id="@+id/event_subtext"
                    style="@style/card_view_text"
                    android:text="@string/lorem_ipsum"
                    android:paddingLeft="16dp"
                    android:layout_below="@id/event_text" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/food_card_view"
            style="@style/card_view">
            <RelativeLayout
                style="@style/card_view_layout" >
                <LinearLayout
                    android:id="@+id/food_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:id="@+id/food_icon"
                        style="@style/card_view_icon"
                        android:src="@drawable/ic_restaurant_menu_black_24dp" />
                    <TextView
                        android:id="@+id/food_title"
                        style="@style/card_view_title"
                        android:text="@string/food"
                        android:paddingLeft="16dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/food_image"
                    style="@style/card_view_image"
                    android:adjustViewBounds="true"
                    android:layout_below="@id/food_title_layout" />
                <TextView
                    android:id="@+id/food_text"
                    style="@style/card_view_text_title"
                    android:layout_below="@id/food_image"/>
                <TextView
                    android:id="@+id/food_subtext"
                    style="@style/card_view_text"
                    android:paddingLeft="16dp"
                    android:layout_below="@id/food_text" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/opening_time_card_view"
            style="@style/card_view" >
            <RelativeLayout
                style="@style/card_view_layout" >
                <LinearLayout
                    android:id="@+id/opening_time_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:id="@+id/opening_time_icon"
                        style="@style/card_view_icon"
                        android:src="@drawable/ic_access_time_black_24dp" />
                    <TextView
                        android:id="@+id/opening_time_title"
                        style="@style/card_view_title"
                        android:text="@string/opening_time"
                        android:paddingLeft="16dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/opening_time_text"
                    style="@style/card_view_text_title"
                    android:layout_below="@id/opening_time_title_layout"
                    android:text="@string/standard_opening_time" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>