<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/who_we_are_layout">
                <TextView
                    style="@style/who_we_are_number"
                    android:text="@string/who_we_are_number_1"/>
                <TextView
                    style="@style/title"
                    android:text="@string/who_we_are_title_1"/>
            </LinearLayout>
            <LinearLayout
                style="@style/who_we_are_layout">
                <TextView
                    style="@style/who_we_are_number"
                    android:text="@string/who_we_are_number_2"/>
                <TextView
                    style="@style/title"
                    android:text="@string/who_we_are_title_2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/who_we_are_layout">
                <TextView
                    style="@style/who_we_are_number"
                    android:text="@string/who_we_are_number_3"/>
                <TextView
                    style="@style/title"
                    android:text="@string/who_we_are_title_3"/>
            </LinearLayout>
            <LinearLayout
                style="@style/who_we_are_layout">
                <TextView
                    style="@style/who_we_are_number"
                    android:text="@string/who_we_are_number_4"/>
                <TextView
                    style="@style/title"
                    android:text="@string/who_we_are_title_4"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            style="@style/text"
            android:text="@string/who_we_are_text"
            android:paddingTop="24dp"/>
    </LinearLayout>
</ScrollView>