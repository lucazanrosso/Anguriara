                            android:textColor="@color/accent"
                            android:background="@null"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

